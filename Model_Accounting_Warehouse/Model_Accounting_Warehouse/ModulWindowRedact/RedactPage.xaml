<Window x:Class="Model_Accounting_Warehouse.ModulWindowRedact.RedactPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Model_Accounting_Warehouse.ModulWindowRedact"
        mc:Ignorable="d"
        Title="RedactPage" MinHeight="150" MinWidth="400" Height="150" Width="400" Background="#FF1A1A1A">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,6">
            <TextBlock Text="Выберете номер товара для редоктирования: " Margin="10,4" Foreground="White"/>
            <ComboBox Height="25" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,36">
            <TextBlock Text="Или введите код полки товара: " Margin="10,6" Foreground="White"/>
            <TextBox x:Name="CodeProduct" Height="25" Width="180" SelectionBrush="{x:Null}" SelectionTextBrush="White" Foreground="White">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF1E1E1E"/>
                        <GradientStop Color="#FF1A1A1A" Offset="0.98"/>
                    </LinearGradientBrush>
                </TextBox.Background>

            </TextBox>
        </StackPanel>
        <Button Content="Редоктировать!" Margin="0,90,0,0" VerticalAlignment="Bottom" Height="44" Click="RedactProduct"/>
        <Frame Visibility="Collapsed"/>
    </Grid>
</Window>
