<Page x:Class="Model_Accounting_Warehouse.Page_Prog.Work_PageProg.PageEditProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Model_Accounting_Warehouse.Page_Prog.Work_PageProg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEditProduct">

    <Grid x:Name="GridWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя строка: Название и Остаток -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="12,23,0,0" HorizontalAlignment="Left" Width="200">
            <Image x:Name="ImageProduct" Width="150" Height="150" Margin="3,3,3,3"/>
            <Button x:Name="AddImage" Content="Добавить изображение" Click="AddImage_Click"/>
        </StackPanel>

        <TextBox x:Name="NameProductTextBox" Grid.Column="2" Grid.Row="0" Text="Cool Cola" FontSize="20" Margin="10,23,10,0" VerticalAlignment="Top"/>

        <TextBox x:Name="ProductRemains" Grid.Column="3" Grid.Row="0" Text="6 (шт / кг)" FontSize="20" ToolTip="@ProductRemains" TextChanged="ProductRemains_TextChanged" Margin="10,23,10,0" VerticalAlignment="Top"/>

        <!-- Вторая строка: Возраст продажи и цены -->
        <TextBox x:Name="ArePrise" Grid.Column="2" Grid.Row="1" Text="6+" Height="30" FontSize="20" Width="146" ToolTip="Возраст продажи" Margin="10,10,10,0" VerticalAlignment="Top"/>

        <StackPanel Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Margin="10,10,10,10">
            <TextBox x:Name="PayPrise" Text="0р" Height="30" FontSize="20" Width="146" ToolTip="Цена продажи" Margin="0,0,0,10"/>
            <TextBox x:Name="MaiPrise" Text="0р" Height="30" FontSize="20" Width="146" ToolTip="Постоянная Цена Продукта" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Третья строка: Описание -->
        <TextBox x:Name="DescriptionProductTextBox" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Text="Радеилов Любит" FontSize="20" Margin="12,10,12,10" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <!-- Четвертая строка: Поставщик и номер -->
        <TextBox x:Name="PstavsikProducta" Grid.Column="0" Grid.Row="4" Text="ООО Кокакола" Height="30" FontSize="20" ToolTip="Поставщик" Margin="12,10,12,10"/>

        <TextBox x:Name="Nuber" Grid.Column="1" Grid.Row="4" Text="000000" Height="30" FontSize="20" Width="146" ToolTip="Номер" Margin="12,10,12,10"/>

        <TextBox x:Name="BayPrise" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Text="0р" Height="30" FontSize="20" ToolTip="Цена закупки" Margin="10,10,10,10"/>

        <!-- Пятая строка: Календарь и статус -->
        <StackPanel Grid.Column="3" Grid.Row="1" Grid.RowSpan="3" Margin="10,10,10,10">
            <TextBlock x:Name="Finalety" Text="Склад и заказ" Foreground="White" FontSize="24" VerticalAlignment="Top" Margin="0,0,0,10"/>
            <Calendar x:Name="Calend" Margin="0,0,0,10"/>
            <ComboBox x:Name="TypeStatus" TabIndex="0" Foreground="White" Height="30">
                <ComboBoxItem Content="Нет в наличии"/>
                <ComboBoxItem Content="В наличии"/>
                <ComboBoxItem Content="Ожидается"/>
            </ComboBox>
        </StackPanel>

        <!-- Кнопка внизу -->
        <Button x:Name="Edit" Grid.Column="3" Grid.Row="5" Content="Внести изменения в таблицу" FontSize="15" 
            Background="#FF0030F3" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
            Height="43" Width="246" Click="EditTable" Margin="0,0,10,10"/>
    </Grid>
</Page>
