<Page x:Class="Model_Accounting_Warehouse.Page_Prog.PageMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Model_Accounting_Warehouse.Page_Prog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMainMenu"  KeyDown="KeyControlPage">

    <Grid x:Name="GridWindow" Background="#FF1A1A1A">
        <TextBlock x:Name="MainText" Text="Модуль Контроля Склада" Foreground="White" TextAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="48"/>

        <TextBox x:Name="NameUser" Height="45" Width="350" VerticalAlignment="Bottom" Margin="220,0,220,200" Text="Admin" FontSize="24" />
        <PasswordBox x:Name="PasswordUser" Height="45" Width="350" Margin="220,0,220,140" VerticalAlignment="Bottom" FontSize="24" />
        <TextBox x:Name="PasswordUserCheck" Visibility="Collapsed" Height="45" Width="350" Margin="220,0,220,140" VerticalAlignment="Bottom" FontSize="24" />
        <Button x:Name="ButEnterProfil" Content="Войти в профиль" Width="368" Click="EnterProfil_Button" VerticalAlignment="Bottom" Margin="219,0,213,100" Foreground="White" Background="{x:Null}"/>
        <Button x:Name="PassworDutton" Content="Показать пороль" Width="368" Click="Button_Click" VerticalAlignment="Bottom" Margin="219,0,213,72" Foreground="White" Background="{x:Null}" Height="20"/>
        <Image Margin="665,29,18,363"/>
    </Grid>
</Page>
